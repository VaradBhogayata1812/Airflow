#!/bin/bash
# init-airflow.sh

# Initialize the database
airflow db init

# Create an admin user (adjust the command with your desired username, password, etc.)
airflow users create \
  --username 'admin' \
  --firstname 'Varad' \
  --lastname 'Bhogayata' \
  --role 'Admin' \
  --email 'varadbhogayata78@gmail.com' \
  --password 'Varad@1812'

airflow connections add 'google_cloud_default' \
  --conn-type 'google_cloud_platform' \
  --conn-uri 'google-cloud-platform://?extra__google_cloud_platform__key_path=C:\Users\varad\OneDrive\Desktop\etl-project-418923-8dc23d8dbe8c
